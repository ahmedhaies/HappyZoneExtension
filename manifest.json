{
    "manifest_version": 2,
  
    "name": "HappyZone",
    "description": "This extension will keep you happy",
    "version": "1.0",
  
    "browser_action": {
    //  "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab",
     "https://www.facebook.com/*"
     ],
     "content_scripts": [
        {
          "matches": ["https://www.facebook.com/*"],
          "css": ["mystyles.css"],
          "js": ["myscript.js"]
        }
      ],
      "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
  }